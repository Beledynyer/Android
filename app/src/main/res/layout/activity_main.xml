<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nmu_blue"
    tools:context=".MainActivity">

    <!-- Background Image -->

    <!-- Logo at the Top -->

    <!-- Get Started Button -->

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="419dp"
        android:layout_height="892dp"
        android:contentDescription="@string/background_image"
        android:scaleType="centerCrop"
        android:src="@drawable/main_act"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="163dp"
        android:layout_height="79dp"
        android:src="@drawable/real_logo"
        app:layout_constraintBottom_toTopOf="@+id/text1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />

    <Button
        android:id="@+id/logIn_Button"
        android:layout_width="319dp"
        android:layout_height="73dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/nmu_yellow"
        android:fontFamily="@font/montserrat_bold"
        android:onClick="registerAccount"
        android:text="Get Started"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.857" />

    <!-- Login Text -->

    <!-- Text 1 -->

    <TextView
        android:id="@+id/login_text"
        android:layout_width="149dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_bold"
        android:onClick="launchLogin"
        android:text="Login here"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/already_have_account_text"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="364dp"
        android:layout_height="76dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:onClick="launchLogin"
        android:text="Dive into University\ndiscourse"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97" />

    <!-- Text 2 -->
    <TextView
        android:id="@+id/text2"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:onClick="launchLogin"
        android:text="Where words and images\nconverge"
        android:textAlignment="center"
        android:textColor="@color/my_gray"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/logIn_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.968" />

    <!-- New Text below the button -->
    <TextView
        android:id="@+id/already_have_account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Already have an account?"
        android:textColor="@color/my_gray"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logIn_Button" />

</androidx.constraintlayout.widget.ConstraintLayout>